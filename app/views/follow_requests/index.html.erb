<div>
  <div>
    <h1>
      List of all follow requests
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new follow request
    </h2>

    <form action="/insert_follow_request" method="post">
      <div>
        <label for="query_recipient_id>
          Recipient
        </label>

        <input type="text" id="query_recipient_id" name="query_recipient_id">
      </div>

      <div>
        <label for="query_sender_id">
          Sender
        </label>

        <input type="text" id="query_sender_id" name="query_sender_id">
      </div>

      <div>
        <label for="query_status">
          Status
        </label>

        <input type="text" id="query_status" name="query_status">
      
      </div>

      <button>
        Create follow request
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Sender
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_follow_requests.each do |a_follow_request| %>
      <tr>
        <td>
          <%= a_follow_request.id %>
        </td>

        <td>
          <%= a_follow_request.recipient_id %>
        </td>

        <td>
          <%= a_follow_request.sender_id %>
        </td>

        <td>
          <%= a_follow_request.status %>
        </td>

        <td>
          <%= time_ago_in_words(a_follow_request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_follow_request.updated_at) %> ago
        </td>

        <td>
          <a href="/follow_requests/<%= a_follow_request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
