<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new photo
    </h2>

  <form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">
      <div>
        <label for="image">
          Image
        </label>

        <input type="file" id="image" name="image" class="form-control">
      </div>

      <div>
        <label for="query_caption">
          Caption
        </label>

        <textarea id="query_caption" name="query_caption" rows="3"></textarea>
      </div>

      <div>
        <label for="query_comments_count">
          Comments count
        </label>

        <input type="text" id="query_comments_count" name="query_comments_count">
      </div>

      <div>
        <label for="query_likes_count">
          Likes count
        </label>

        <input type="text" id="query_likes_count" name="query_likes_count">
      </div>

      <div>
        <label for="query_owner_id">
          Owner
        </label>

        <input type="text" id="query_owner_id" name="query_owner_id">
      </div>

      <button>
        Add photo
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Comments count
        </th>

        <th>
          Likes count
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <img src="<%= a_photo.image %>" class="img-responsive">
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.comments_count %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= a_photo.owner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
